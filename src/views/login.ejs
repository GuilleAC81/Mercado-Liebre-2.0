<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head', {title: 'Accedé'}) %>
<body>
    
    <%- include('partials/headerNavbar') %>
    
    <section>
        <img src="/images/img-home-banner.jpg" alt="Cobra con todas las tarjertas" width="100%">
    </section>

    <main class="cuerpo">
        <form action="/users/login" method="post" class="cuerpo-registro">
            
            <div class="elemento-formulario">
                <label for="user">Ingrese nombre de usuario</label>
                <input type="text" name="user" id="user" class="campo-formulario">
            </div>
            <% if (locals.errors && errors.user) { %>
                <div class="text-error">
                    <%= errors.user.msg %>
                </div>
            <% } %>            
        
            <div class="elemento-formulario">
                <label for="password">Contraseña</label>
                <input type="password" name="password" id="password" class="campo-formulario">
            </div>
            
            <div class="elemento-formulario">
                    <div class="checkbox remember" >
                        <input  type="checkbox" name="rememberMe" id="rememberMe">
                        <label for="rememberMe">Recordarme</label>
                    </div>
            </div>            
            <a href="/"><button class="boton-formulario">Enviar</button></a>
            

        </form>
    </main>
    
    <br>

    <%- include('./partials/footer.ejs') %>
    
</body>
</html>