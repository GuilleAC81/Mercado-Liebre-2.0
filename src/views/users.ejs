<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Todos los productos'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<!-- todos los productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Todos los Usuarios</h2>
			</div>

			<% for(user of users) {%>
		
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/users/<%=user.id%>">
						<figure class="product-box_image">
							<img src="/images/users/<%=user.image%>" alt="<%=user.name%>">
						</figure>
						<article class="product-box_data">
							<h2><%=user.user%></h2>
							<span><%=user.perfil%></span>
							<p> <%=user.name%> </p>							
						</article>
					</a>
				</section>
			</div>

			<%}%>
		
		</div>
	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>